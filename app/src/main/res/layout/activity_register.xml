<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText android:id="@+id/edit_phone_number"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:hint="手机号"
        android:textColorHint="#a0a0a0"
        android:inputType="phone"
        android:maxLength="11"
        android:textColor="#000000"
        android:textCursorDrawable="@drawable/color_cursor"
        />

    <Button android:id="@+id/btn_send_verification_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edit_phone_number"
        android:layout_alignBaseline="@+id/edit_phone_number"
        android:width="50dp"
        android:height="23dp"
        android:background="@drawable/login"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="验证"
        android:textSize="12sp"
        android:textColor="@color/white" />

    <View android:id="@+id/line_under_phone_number"
        android:background="#a0a0a0"
        android:layout_below="@+id/edit_phone_number"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="1dp" />

    <EditText android:id="@+id/edit_verification_code"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/line_under_phone_number"
        android:background="#00000000"
        android:hint="验证码"
        android:textColorHint="#a0a0a0"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="#000000"
        android:textCursorDrawable="@drawable/color_cursor" />

    <View android:id="@+id/line_under_verification_code"
        android:background="#a0a0a0"
        android:layout_below="@+id/edit_verification_code"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="1dp" />

    <Button android:id="@+id/btn_next_step"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/line_under_verification_code"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login"
        android:layout_marginTop="20dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="下一步"
        android:textColor="@color/white"
        />

</RelativeLayout>
